<h1>ログイン</h1>

<%= form_with url: login_path, class: "login-form" do %>

<% if flash[:alert] %>
  <div class="form-error">
    <%= flash[:alert] %>
  </div>
<% end %>

  <div class="form-group">
    <%= label_tag :email, "メールアドレス" %>
    <%= email_field_tag :email, params[:email], class: ("input-error" if flash[:alert]) %>
  </div>

  <div class="form-group">
    <%= label_tag :password, "パスワード" %>
    <%= password_field_tag :password, nil, class: ("input-error" if flash[:alert]) %>
  </div>

  <div class="form-actions">
    <%= submit_tag "ログイン" %>
  </div>
<% end %>
