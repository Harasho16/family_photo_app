<h1>写真アップロード</h1>

<%= form_with model: @photo do |f| %>

<% if @photo.errors.any? %>
    <div class="form-error">
      <ul>
<%   @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
<%   end %>
      </ul>
    </div>
<% end %>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :image, "画像ファイル" %>
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.submit "アップロード" %>
  </div>

<% end %>

<hr>

<%= link_to "一覧へ戻る", photos_path %>
